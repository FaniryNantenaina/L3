<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, unitial-scale=1.0">
        <link rel="stylesheet" href="/assets/semantic/semantic.css">
        <link rel="stylesheet" href="/assets/style.css">
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <title>ONG ODEFI</title>
    </head>

    <body>

        <!--- side bar --->
            <%- include('sidebar'); -%>
        <!--- side bar --->

        <!--- top nav --->
        <nav class="ui top fixed inverted menu">
            <div class="left menu">
                <a href="#" class="siderbar-menu-togglar item" data-target="#sideber">
                    <i class="sidebar icon"></i>
                </a>
                <a href="#" class="header item">
                    GESTION DES ETUDIANTS
                </a>
            </div>
            <div class="right menu">
                <a href="#" class="item">
                    <i class="bell icon"></i>
                </a>
                <div class="ui dropdown item">
                    <i class="ui user circle icon"></i>
                    <div class="menu">
                        <a href="#" class="item">
                            <i class="info circle icon"></i> Profile
                        </a>
                        <a href="#" class="item">
                            <i class="wrench icon"></i> Paramètres
                        </a>
                        <a href="#" class="item">
                            <i class="sign-out icon"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!--- top nav --->

        <!--- section --->

        <div class="pusher" style="margin-left: 20px; margin-right: 20px;">
            <div class="main-content">
                <h1 style="text-align: center; margin-top: 60px; color: rgb(94, 162, 105);"><i class="ui icon edit"></i> Modifier la formation : <%= matiere.CodeMatiere %></h1>
                    <div class="ui segment">
                        <form action="/update" method="post" class="ui form">
                            <div class="field">
                                <label>Code Formations :</label>
                                <input style="background-color: #e0e0e0;" type="text" name="cd" readonly value="<%= matiere.CodeMatiere %>" placeholder="Entrez le code matière..." required>
                            </div>
                            <div class="field">
                                <label>Désignation :</label>
                                <input type="text" name="design" value="<%= matiere.Designation %>" placeholder="Entrez la désignation..." required>
                            </div>
                           

                            <button class="ui button blue" type="submit"><i class="ui icon save"></i> Modifier</button>
                            <a href="/listes_matiere" class="ui button orange" type="submit"><i class="ui icon close"></i> Annuler</a>
                        </form>
                    </div>              
            </div>
        </div>

        <!--- section --->
        <script>
            let btnCheck = document.querySelector('button');
           let input = document.querySelector('input');
           let result = document.querySelector('h1');
           
           btnCheck.addEventListener('click', () => {
               let value = input.value.trim();
           
               result.innerText = value.length == 0 ? 'Modification réussi' : 'Modification réussi';
           })  
           </script>

        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <script src="/assets/script.js"></script>

    </body>
</html>