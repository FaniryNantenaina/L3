<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, unitial-scale=1.0">
        <link rel="stylesheet" href="/assets/semantic/semantic.css">
        <link rel="stylesheet" href="/assets/style.css">
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <title>ONG ODEFI</title>
    </head>

    <body>

        <!--- side bar --->
            <%- include('sidebar'); -%>
        <!--- side bar --->

        <!--- top nav --->
      
        <!--- top nav --->

        <!--- section --->

        <div class="pusher" style="margin-left: 20px; margin-right: 20px; ">
            <div class="main-content">
                <h1 style="text-align: center; margin-top: 60px;"><i class="ui icon th list"></i> Ajouter une formation</h1>
                    <div class="ui segment">
                        <form action="/save" method="post" class="ui form">
                            <% if (locals.flash && locals.flash.error) { %>
                                <div class="ui mini red message mt-3">
                                    <i class="close icon"></i>
                                    <div class="header"><h3 style="text-align: center;">Alerte !</h3></div>
                                    <div class="list">
                                        <h5 style="text-align: center;"><%= flash.error %></h5>
                                    </div>
                                </div>
                            <% } %>

                            <div class="field">
                                <label>Code Formation :</label>
                                <input type="text" name="cd" placeholder="Entrez le code formation..." required>
                            </div>
                            <div class="field">
                                <label>Désignation :</label>
                                <input type="text" name="design" placeholder="Entrez la désignation..." required>
                            </div>
                            <div class="field">
                              

                            <button class="ui button blue" type="submit"><i class="ui icon save"></i> Enregistrer</button>
                            <a href="/listes_matiere" class="ui button orange" type="submit"><i class="ui icon close"></i> Annuler</a>
                        </form>
                    </div>              
            </div>
        </div>

        <!--- section --->

        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <script src="/assets/script.js"></script>

        <script>
            $(document).ready( function(){
                $('.close').click(function(){
                    $('.message').hide('slow');
                });
            });
        </script>

    </body>
</html>