<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, unitial-scale=1.0">
        <link rel="stylesheet" href="/assets/semantic/semantic.css">
        <link rel="stylesheet" href="/assets/style.css">
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <title>ONG ODEFI</title>
    </head>

    <body>

        <!--- side bar --->
            <%- include('sidebar'); -%>
        <!--- side bar --->

        <!--- top nav --->
        
        <!--- top nav --->

        <!--- section --->

        <div class="pusher" style="margin-left: 20px; margin-right: 20px;">
            <div class="main-content">
                <h1 style="text-align: center; margin-top: 60px; color: rgb(94, 162, 105);"><i class="ui icon edit"></i> Modifier l'étudiant N° CIN : <%= user.NumInscription %></h1>
                <div class="ui segment">
                    <form action="/modifier" method="post" class="ui form">
                        <div class="field">
                            <label>Cin :</label>
                            <input style="background-color: #e0e0e0;" type="text" name="num" readonly value="<%= user.NumInscription %>">
                        </div>
                        <div class="field">
                            <label>Nom :</label>
                            <input type="text" name="nom" value="<%= user.Nom %>" placeholder="Entrez votre nom..." required>
                        </div>
                        <div class="field">
                            <label>Prenom:</label>
                            <input type="text" name="prenom" value="<%= user.Prenom %>" placeholder="votre date de prenom..." required>
                        </div>
                                   
                        <div class="field">
                            <label>Adresse :</label>
                            <input type="text" name="adresse" value="<%= user.Adresse %>" placeholder="Entrez votre adresse..." required>
                        </div>
                       
                        <div class="field">
                            <label>Formation :</label>
                            <input type="text" name="formation" value="<%= user.Formation %>" placeholder="Choisir une formation" required>
                        </div>
                        <div class="field">
                            <label>Email :</label>
                            <input type="text" name="email" value="<%= user.Email %>" placeholder="votre email..." required>
                        </div>
                        <div class="field">
                            <label>Contact :</label>
                            <input type="text" name="contact" value="<%= user.Contact %>" placeholder="votre numéro..." required>
                        </div>
                        <button class="ui button blue" type="submit"><i class="ui icon save"></i> Modifier</button>
                   

                        <a href="/listes_etudiant" class="ui button orange" type="submit"><i class="ui icon close"></i> Annuler</a>
                    </form>

                </div>  
                            
            </div>
        </div>
<script>
 let btnCheck = document.querySelector('button');
let input = document.querySelector('input');
let result = document.querySelector('h1');

btnCheck.addEventListener('click', () => {
    let value = input.value.trim();

    result.innerText = value.length == 0 ? 'Modification réussi' : 'Modification réussi';
})  
</script>
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <script src="/assets/script.js"></script>

    </body>
</html>